# Server Configuration
NODE_ENV=development
PORT=3000

# Database - PostgreSQL
# ⚠️ 生產環境必須修改預設密碼！使用強密碼（至少 16 字元，含大小寫、數字、特殊字元）
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
POSTGRES_DB=contentpilot_dev

# Database - Redis
# ⚠️ 生產環境必須設定 Redis 密碼
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_IN_PRODUCTION
REDIS_URL=redis://:CHANGE_ME_IN_PRODUCTION@localhost:6379

# JWT Authentication
# ⚠️ 生產環境必須更換為隨機安全金鑰（建議 64 字元以上）
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# AI Services - Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# AI Services - OpenAI (Fallback)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Search API - Serper
SERPER_API_KEY=your-serper-api-key-here

# CORS Settings
FRONTEND_URL=http://localhost:5173

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
