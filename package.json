{
  "name": "contentpilot",
  "version": "0.1.0",
  "description": "ContentPilot AI - SEO 自動化內容生產系統",
  "private": true,
  "scripts": {
    "setup": "powershell -ExecutionPolicy Bypass -File ./setup-local.ps1",
    "dev": "powershell -ExecutionPolicy Bypass -File ./start-dev.ps1",
    "stop": "powershell -ExecutionPolicy Bypass -File ./stop-dev.ps1",
    "backend": "cd backend && npm start",
    "frontend": "cd frontend && npm run dev",
    "test": "cd backend && node test-integration.js",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d",
    "install:all": "cd backend && npm install && cd ../frontend && npm install"
  },
  "workspaces": [
    "backend",
    "frontend"
  ]
}
